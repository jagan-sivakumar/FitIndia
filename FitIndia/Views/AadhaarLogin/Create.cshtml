@model FitIndia.Models.AadhaarLogin

@{
    ViewBag.Title = "Aadhaar Login";
}
<div class="no-menu">
</div>
<table align="center" class="login-table">
    <tr>
        <td>
            <div class="container">
                <div class="form-legend">
                    <span>Aadhaar Login</span>
                </div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <fieldset>

                        <div class="editor-label">
                            @Html.LabelFor(model => model.AadhaarNo)
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.AadhaarNo)
                            @Html.ValidationMessageFor(model => model.AadhaarNo)
                        </div>

                        <div class="editor-label">
                            @Html.LabelFor(model => model.Pincode)
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Pincode)
                            @Html.ValidationMessageFor(model => model.Pincode)
                        </div>

                        <p>
                            <input type="submit" value="Login" class="btn" />
                        </p>
                    </fieldset>
                }
            </div>
        </td>
    </tr>
</table>





        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
